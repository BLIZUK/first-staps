    low = lower.input('Включать ли строчные буквы abcdefghijklmnopqrstuvwxyz? д - да, н - нет.  ')
    punct = lower.input('Включать ли символы !#$%&*+-=?@^_?: д - да, н - нет. ')
    similar_symbols = lower.input('Исключать ли неоднозначные символы il1Lo0O? д - да, н - нет. ')


def password():
    chars = ''
    digits = '0123456789'
    if num == 'д':
        chars += digits
    lowercase_letters = 'abcdefghijklmnopqrstuvwxyz'
    if low == 'д':
        chars += lowercase_letters
    uppercase_letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
    if up == 'д':
        chars += uppercase_letters
    punctuation = '!#$%&*+-=?@^_'
    if punct == 'д':
        chars += punctuation
    for i in range(count):

        pass
    return chars



