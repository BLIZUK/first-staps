def main():
    check = 'д'
    while check == 'д' or check == 'l':
        print(double())
        check = input('| Продолжить? ').lower()
    print('... До новых встреч!')

#  Перевод из 10-ой в 2-ую
def double():
    num = int(input())
    num2 = ''
    while num > 0:
        num2 += str(num % 2)
        num = num // 2
    return (num2)


